{% extends 'base.html.twig' %}

{% block title %}Actividades{% endblock %}

{% block body %}
    <h1>Actividades</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actividade.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ actividade.nombre }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ actividade.grupo }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ actividade.foto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ actividade.fecha ? actividade.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ubicacion</th>
                <td>{{ actividade.ubicacion }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ actividade.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ actividade.precio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actividades_index') }}">back to list</a>

    <a href="{{ path('actividades_edit', {'id': actividade.id}) }}">edit</a>

    {{ include('actividades/_delete_form.html.twig') }}
{% endblock %}
